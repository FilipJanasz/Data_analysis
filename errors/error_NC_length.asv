function NC_length_error_abs=error_NC_length(NC_length,moles_total,temp,press,moles_total_error_abs,temp_error_abs,press_error_abs,R)
%error propagation see http://www.rit.edu/cos/uphysics/uncertainties/Uncertaintiespart2.html
radius=0.01;
radius_error=0.0005;
[~,cross_section_error_rel]=error_cross_section(radius, radius_error);
NC_length_error_rel=sqrt((moles_total_error_abs/moles_total)^2+temp/temp_error_abs+press/press_error_abs)*R/(pi*0.01^2);
NC_length_error_abs=NC_length_error_rel*NC_length;
end